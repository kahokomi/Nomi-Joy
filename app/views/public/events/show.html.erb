<header class="public-header">
  <%= render 'public/logging_in_header' %>
</header>
<main class="row">
  <div class="sidebar public-sidebar">
    <%= render 'public/logging_in_slidebar' %>
  </div>  
  <div class="body">
    <div class="heading">
      <h1 class="heading__en">Nomikai Detail</h1>
      <h3 class="heading__ja">ノミカイ詳細</h3>
    </div>
    <div class="content">
      <div class="content__block--overview">
        <div class="row">
          <table class="table table-borderless col-8">
            <tbody>
              <tr>
                <th scope="row">ノミカイ名</th>
                <td><%= @event.name %></td>
              </tr>
              <tr>
                <th scope="row">日にち</th>
                <td><%= @event.date.to_s(:date_jp) %>（<%= @day_of_the_week %>）</td>
              </tr>
              <tr>
                <th scope="row">時間</th>
                <td><%= @event.begin_time.to_s(:time) %> 〜 <%= @event.end_time.to_s(:time) %></td>
              </tr>
              <tr>
                <th scope="row">場所</th>
                <td><%= @event.restaurant.name %>&emsp;&emsp;<%= link_to @event.restaurant.url, target: :_blank, class: "btn blue-btn" do %>ぐるなびで見る<% end %></td>
              </tr>
              <tr>
                <th scope="row"></th>
                <td><%= @event.restaurant.access %></td>
              </tr>
              <tr>
                <th scope="row"></th>
                <td><%= @event.restaurant.address %></td>
              </tr>
              <tr>
                <th scope="row">会費</th>
                <td><%= @event_user.fee %>円</td>
              </tr>
              <tr>
                <th scope="row">支払いステータス</th>
                <td><% if @event_user.fee_status == true %>支払済<% else %>未払い<% end %></td>
              </tr>
              <tr>
                <th scope="row">カンジ</th>
                <td><%= link_to user_path(@admin),class:"" do %><%= attachment_image_tag @admin, :image, format: 'jpeg',fallback: "no_image.jpg", class:"small-image" %><% end %><%= @admin.belongs %><%= @admin.position %></td>
              </tr>
              <tr>
                <th scope="row"></th>
                <td><%= link_to user_path(@admin),class:"" do %><%= @admin.name %><% end %>&emsp;&emsp;<%= link_to room_path(@admin.id),class:"btn green-btn" do %>カンジに連絡する<% end %></td>
              </tr>
            </tbody>
          </table>
          <div class= "col-4">
              <%= image_tag(@event.restaurant.shop_image, class: "middle-image") %>
              <%= link_to "https://api.gnavi.co.jp/api/scope/", target: :_blank do %><%= image_tag("https://api.gnavi.co.jp/api/img/credit/api_155_20.gif") %><% end %>
          </div>
        </div>
      </div>
      <!-- マップ -->
      <div class="content__block--map">
        <h2 class="block-hedding">お店のMap</h2>
        <div class="google-map">
          <div id='map' class="<%= @event.restaurant.address %>"> </div>
        </div>
      </div>
    </div>
  </div>
</main>

<%# マップ(JS)  %>
<script sec="javascripts/address_map.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=<%= ENV['GOOGLE_MAP_API_KEY'] %>&callback=initMap" async defer></script>
