<header class="admin-header">
  <%= render 'admin/logging_in_header' %>
</header>
<main class="row">
  <div class="sidebar admin-sidebar">
    <%= render 'admin/logging_in_slidebar' %>
  </div>  
  <div class="body">
    <div class="heading">
      <%# フラッシュメッセージ %>
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>">
          <%= message %>
        </div>
      <% end %>
        <h1 class="heading__en">Create ノミカイ &lt;Step2&gt;</h1>
        <h3 class="heading__ja">ノミカイ新規作成 &lt;Step2&gt;</h3>
    </div>
    <div class="content">
      <div class="content__block--step-bar">
        <h3>お店選択</h3>
        <div><%= image_tag("step-bar.png", class: "") %>
      </div> 
      <div class="content__block--step2 content__block">
        <p class="text-muted">（例：&ensp;"魚金 新宿",&ensp;;"イタリアン,新宿"）</p>
        <%= form_with model: @event, url: admin_step2_path, local: true do |f| %>
          <%= text_field_tag :freeword %>
          <%= submit_tag '検索',class: "" %>
          <span class="must">&emsp;*</span>
          <% if @rests %>
            <% @rests.each do |rest| %>
              <p class="text-left choose-restaurant">
                <%= radio_button_tag :restaurant, rest  %>
                <%= image_tag(rest["image_url"]["shop_image1"], class: "restaurant-image") %>
                <span class="restaurant-result responsive-font-sm"><%= rest["name"] %></span>
                <%= link_to rest["url"], target: :_blank, class: "btn blue-btn gurunavi-sm-btn ml-1" do %>ぐるなびで見る<% end %>
              </p>
            <% end %>
          <% end %>
          <%= f.hidden_field :name %>
          <%= f.hidden_field :date %>
          <%= f.hidden_field :begin_time %>
          <%= f.hidden_field :end_time %>
          <%= f.hidden_field :memo %>
          <p class="step2-button">
            <%= f.submit "Next", name: :next, class: "btn blue-btn btn-sm" %>
            <%= f.submit "Back", name: :back, class: "btn white-btn btn-sm" %>
          </p>
        <% end %>
      </div>
    </div>
    <%= render "layouts/footer" %>
  </div>
</main>


