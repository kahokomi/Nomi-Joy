<header class="admin-header">
  <%= render 'admin/logging_in_header' %>
</header>
<main class="row">
  <div class="sidebar admin-sidebar">
    <%= render 'admin/logging_in_slidebar' %>
  </div>  
  <div class="body">
    <div class="heading">
      <h1 class="heading__en">Add Member</h1>
      <h3 class="heading__ja">メンバー設定</h3>
    </div>
    <div class="content">
      <div class="content__block--add-event-user content__block">
        <% if @unselected_members.present? %>
          <%= form_with model: @event_user, url: admin_add_event_user_fee_path,  local: true do |f| %>
            <table class="table table-borderless">
              <tbody>
                <tr class= "">
                  <td class="event-create-member-form">
                    <%= collection_check_boxes(:event_user, :ids, @unselected_members, :id, :name) %>
                    <div class="actions"> 
                      <%= f.submit "Next", class: "btn blue-btn" %>
                      <%= f.submit "Back", name: :back, class: "btn white-btn" %>
                    </div> 
                  </td>
                </tr>
              </tbody>
            </table>
          <% end %>
        <% else %>
          <h3>追加できるメンバーがいません  </h3>
          <br>
          <p class="text-muted">カンジの部屋を退室し、メンバータブから申請・承認を行ってください</p>
        <% end %>
      </div>
    </div>
  </div>
</main>
