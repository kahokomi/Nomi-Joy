<header class="admin-header">
  <%= render 'admin/logging_in_header' %>
</header>
<main class="row">
  <div class="sidebar admin-sidebar">
    <%= render 'admin/logging_in_slidebar' %>
  </div>  
  <div class="body">
    <div class="heading">
      <h1 class="heading__en">Nomikai Create Step1</h1>
      <h3 class="heading__ja">ノミカイ新規作成</h3>
    </div>
    <div class="content">
      <div class="content__block--step-bar">
        <div><%= image_tag("step-bar.png", class: "") %>
      </div> 
      <div class="content__block--step1 content__block">
        <%= form_with model: @event, url: admin_step2_path,  local: true do |f| %>
          <table class="table table-borderless">
            <tbody>
              <tr>
                <th scope="row">ノミカイ名</th>
                <td><%= f.text_field :name, autofocus: true, autocomplete: "name", class:"create-event-form" %></td>
              </tr>
              <tr>
                <th scope="row">日にち</th>
                <td><%= f.date_field :date, autofocus: true, autocomplete: "date", class:"create-event-form" %></td>
              </tr>
              <tr>
                <th scope="row">時間</th>
                <td><%= f.time_field :start_time, autofocus: true, autocomplete: "start_time", class:"create-event-form--time" %>&emsp;〜&emsp;<%= f.time_field :end_time, autofocus: true, autocomplete: "end_time", class:"create-event-form--time" %></td>
              </tr>
              <tr>
                <th scope="row">場所</th>
                <td><%= f.text_field :restaurant_id, autofocus: true, autocomplete: "restaurnt_id", class:"create-event-form" %>
                
                
                
                
                
                
                
                
                
      
                
                </td>
              </tr>
              <tr>
                <th scope="row">メモ</th>
                <td><%= f.text_area :memo, autofocus: true, autocomplete: "memo", class:"create-event-textarea" %></td>
              </tr>
            </tbody>
          </table>
          <div class="actions"> 
            <%= f.submit "Next", class: "btn blue-btn" %>
          </div> 
        <% end %>

        <h4>お店を検索（例：魚金 新宿）</h4>
        <%= form_tag(admin_step1_path, method: :get) do %>
          <%= text_field_tag :freeword %>
          <%= submit_tag 'Search' %>
            <% if @rests %>
              <% @rests.each do |rest| %>
                <p>
                  <%= check_box_tag :restaurant, rest %>
                  <%= image_tag(rest["image_url"]["shop_image1"], class: "restaurant-image") %>
                  <%= rest["name"] %>
                </p>
              <% end %>
                  <%= submit_tag '決定' %>
            <% end %>
         <% end %>














      </div>
    </div>
  </div>
</main>
