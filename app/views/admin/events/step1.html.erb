<header class="admin-header">
  <%= render 'admin/logging_in_header' %>
</header>
<main class="row">
  <div class="sidebar admin-sidebar">
    <%= render 'admin/logging_in_slidebar' %>
  </div>  
  <div class="body">
    <div class="heading">
      <%# フラッシュメッセージ %>
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>">
          <%= message %>
        </div>
      <% end %>
      <h1 class="heading__en">Nomikai Create Step1</h1>
      <h3 class="heading__ja">ノミカイ新規作成</h3>
    </div>
    <div class="content">
      <div class="content__block--step-bar">
        <h3>日時選択</h3>
        <div><%= image_tag("step-bar.png", class: "") %>
      </div> 
      <div class="content__block--step1 content__block">
        <%= form_with model: @event, url: admin_step2_path,  local: true do |f| %>
          <table class="table table-borderless">
            <tbody>
              <tr>
                <th scope="row">ノミカイ名<span class="must">&emsp;*</span></th>
                <td><%= f.text_field :name, autofocus: true, autocomplete: "name", class:"create-event-form" %></td>
              </tr>
              <tr>
                <th scope="row">日にち<span class="must">&emsp;*</span></th>
                <td><%= f.date_field :date, autofocus: true, autocomplete: "date", class:"create-event-form" %></td>
              </tr>
              <tr>
                <th scope="row">時間<span class="must">&emsp;*</span></th>
                <td><%= f.time_field :begin_time, autofocus: true, autocomplete: "start_time", class:"create-event-form--time" %>&emsp;〜&emsp;<%= f.time_field :end_time, autofocus: true, autocomplete: "end_time", class:"create-event-form--time" %></td>
              </tr>
              <tr>
                <th scope="row">メモ</th>
                <td><%= f.text_area :memo, autofocus: true, autocomplete: "memo", class:"create-event-textarea" %></td>
              </tr>
            </tbody>
          </table>
          <div class="actions"> 
            <%= f.submit "Next", class: "btn blue-btn" %>
          </div> 
        <% end %>
      </div>
    </div>
  </div>
</main>
