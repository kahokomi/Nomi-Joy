<header class="admin-header">
  <%= render 'admin/logging_in_header' %>
</header>
<main class="row">
  <div class="sidebar admin-sidebar">
    <%= render 'admin/logging_in_slidebar' %>
  </div>  
  <div class="body">
    <div class="heading">
      <h1 class="heading__en">Fee</h1>
      <h3 class="heading__ja">会費設定</h3>
    </div>
    <div class="content">
      <div class="content__block--add-event-user-fee content__block">
         <p>会費は後から入力・変更できます</p>
        <%= form_with model: @event_user, url: admin_add_event_user_create_path,  local: true do |f| %>
          <table class="table table-borderless">
              <tbody>
                <tr>
                  <td class="">
                    <% @event_user_ids.each do |event_user_id| -%>
                      <span class="fee-name"><%= User.find(event_user_id).name %></span>&emsp;<%= text_field_tag "fees[]","",class:"fee-form" %>円<br>
                    <% end -%>
                  </td>
                </tr>
              </tbody>
            </table>
            <div class="actions"> 
              <%= f.submit "確定", class: "btn blue-btn" %>
              <%= f.submit "Back", name: :back, class: "btn white-btn" %>
            </div> 
         <% end %>
      </div>
    </div>
  </div>
</main>
